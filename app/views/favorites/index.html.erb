<% if @favorites.empty? == false %>
  <h1>Your Favorite Locations</h1>
  <div class="favorites-container">
    <% @favorites.each do |favorite| %>
      <ul class=favorite>
        <div class="favorite-name">
            <li class="name"><%= link_to favorite.location.name, results_path(location: favorite.location.name), class: 'search-link' %></li>
          </div>
          <div class="favorite-icons"
            <li class="delete"><%= link_to 'Delete', user_favorite_path(current_user, favorite), method: :delete, class: "link" %></li>
          </div>
      </ul>
    <% end %>
  </div>
<% else %>
  <h2> You haven't added any Favorites, yet. </h2>
  <h3> Please enter a Location.
   </h3>
<% end %>